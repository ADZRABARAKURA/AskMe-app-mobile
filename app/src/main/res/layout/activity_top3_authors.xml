<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_top3_authors"
    android:background="@color/background_black">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/background_black">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ваше творчество - ваш заработок"
                    android:textColor="@color/text_white"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"/>

                <com.google.android.material.button.MaterialButton
                    app:cornerRadius="0dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:backgroundTint="@color/background_black"
                    app:strokeColor="@color/btn_stroke_pink"
                    app:strokeWidth="2dp"
                    android:id="@+id/btnStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:text="Приступить"
                    android:textColor="@color/text_white"
                    android:textAllCaps="false"
                    android:textSize="20dp"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="@color/background_grey"
                android:text="AskMe - это удобный сервис по сбору денег для стримеров и не только"
                android:textColor="@color/text_white"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/background_black">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background_black"
                    android:padding="20dp"
                    android:text="Позвольте вашему увлечению приносить доход"
                    android:textAlignment="center"
                    android:textColor="@color/text_white"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@color/background_grey">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:weightSum="3"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="5dp">

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Минимальная комиссия"
                            android:textColor="@color/text_grey"/>

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Безопасные платежи"
                            android:layout_marginVertical="30dp"
                            android:textColor="@color/text_grey"/>

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="bottom"
                            android:text="Ваши цены"
                            android:textColor="@color/text_grey" />

                    </LinearLayout>

                    <View
                        android:id="@+id/divider"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/btn_stroke_pink" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:text="Главная особенность нашего сервиса - дать возможность тем кто хочет поддержать авторов платить через наш сервис напрямую на счёт автору. Мы взымаем определенную комиссию для работы сервиса, но она будет гораздо меньше для вас."
                        android:textColor="@color/text_grey" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Работают с нами"
                    android:textColor="@color/text_white"
                    android:gravity="center"
                    android:textSize="30dp"
                    android:padding="20dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_gravity="center"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/background_grey">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@android:drawable/ic_menu_camera"
                            android:layout_marginTop="20dp"/>

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/author1"
                            android:textColor="@color/text_white"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Перейти в блог"
                            android:textColor="@color/text_pink"
                            android:gravity="center"
                            android:layout_marginBottom="20dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/background_grey"
                        android:layout_marginHorizontal="10dp">

                        <ImageView
                            android:id="@+id/imageView0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@android:drawable/ic_menu_camera"
                            android:layout_marginTop="20dp"/>

                        <TextView
                            android:id="@+id/textView40"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/author2"
                            android:textColor="@color/text_white"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/textView110"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Перейти в блог"
                            android:textColor="@color/text_pink"
                            android:gravity="center"
                            android:layout_marginBottom="20dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/background_grey">

                        <ImageView
                            android:id="@+id/imageView00"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@android:drawable/ic_menu_camera"
                            android:layout_marginTop="20dp"/>

                        <TextView
                            android:id="@+id/textView400"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/author3"
                            android:textColor="@color/text_white"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/textView1100"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Перейти в блог"
                            android:textColor="@color/text_pink"
                            android:gravity="center"
                            android:layout_marginBottom="20dp"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>